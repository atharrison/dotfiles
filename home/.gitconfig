[user]
  name = Ben Hamill
  email = git-commits@benhamill.com
[alias]
  st = status
  co = checkout
  b = branch
  l = log -n10 --pretty=format:'%C(yellow)%h%C(reset) %C(blue)%an%C(reset) %C(green)(%cr)%C(reset) - %C(bold blue)%d%C(reset) %s'
  p = pull --prune
[core]
  excludesfile = ~/.gitignore
[branch]
  autosetuprebase = always
[color]
  diff = true
  status = true
[merge]
  tool = vimdiff
[push]
  default = current
[github]
  user = benhamill
  token = $GITHUB_TOKEN ; Set in ~/.bashrc.local
